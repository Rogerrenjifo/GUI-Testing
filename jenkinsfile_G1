pipeline {
    agent any
    environment {
        DOCKERUSER='roretar' 
        DOCKERPASSWORD=credentials('dockerhubpassword')
        PYTHONPATH = "${WORKSPACE}/GUI-Blueprint"
        SONAR_TOKEN=credentials('SONAR_TOKEN')
        REPO_NAME = "${GIT_URL.split('/')[-2]}/${GIT_URL.split('/')[-1].replace('.git', '')}"
        PASSWORD="pasuconsumo"
        USER="roger.renjifo"
        BROWSER="chrome"
        DEVICE="pc"
        DRIVER_PATH="./"
        IMPLICIT_TIMEOUT="2"
              }
    stages {
        stage('code inspection'){
            steps{
                withSonarQubeEnv('SonarQube') {
                    sh '/var/jenkins_home/sonarcito/sonar-scanner/bin/sonar-scanner -Dsonar.organization=at19 \
                        -Dsonar.projectKey=at19_blueprint \
                        -Dsonar.sources=. \
                        -Dsonar.branch.name=${BRANCH_NAME} \
                        -Dsonar.host.url=https://sonarcloud.io'
              }
          }
        }
        stage('Test Connection') {
            steps {
                sh 'echo "Testing Connection"'
                sh 'echo roger'
            }
        }
    }
}

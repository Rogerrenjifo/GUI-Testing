pipeline {
    agent any
    environment {
        DOCKERUSER='roretar' 
        DOCKERPASSWORD=credentials('dockerhubpassword')
        PYTHONPATH = "${WORKSPACE}/GUI-Blueprint"
        REPO_NAME = "${GIT_URL.split('/')[-2]}/${GIT_URL.split('/')[-1].replace('.git', '')}"
        PASSWORD="pasuconsumo"
        USER="roger.renjifo"
        BROWSER="chrome"
        DEVICE="pc"
        DRIVER_PATH="./"
        IMPLICIT_TIMEOUT="2"
    }
    stages {
        stage('Build Browser Environments') {
            steps {
                sh 'pwd'
                sh 'docker-compose -f ContinuousIntegrationG1/docker-compose.yml up -d'
                sh 'ls'
            }
        }
        stage('Run Test Cases'){
            agent{
                docker{
                    image 'roretar/gui-blueprint-environment:1.0.0'
                }
            }
            steps {
                sh 'echo "run the browser containers."'
                sh 'ls'
                sh 'pwd'
                sh 'pip list'  
            }
            post {
                always {
                    archiveArtifacts artifacts: 'README.md', fingerprint: true
                }
            }
        }
        stage('Down Browser Environments') {
            steps {
                sh 'pwd'
                sh 'docker container ls'
                sh 'docker-compose -f ContinuousIntegrationG1/docker-compose.yml down'
                sh 'ls'
            }
        }
    }
}

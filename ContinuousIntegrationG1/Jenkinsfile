pipeline {
    agent any
    environment {
        DOCKERUSER='roretar' 
        DOCKERPASSWORD=credentials('dockerhubpassword')
        PYTHONPATH = "${WORKSPACE}"
        REPO_NAME = "${GIT_URL.split('/')[-2]}/${GIT_URL.split('/')[-1].replace('.git', '')}"
        PASSWORD="pasuconsumo"
        USER="roger.renjifo"
        BROWSER="remote_chrome"
        DEVICE="pc"
        DRIVER_PATH="./"
        IMPLICIT_TIMEOUT="2"
    }
    stages {
        stage('Build Browser Environments') {
            steps {
                sh 'pwd'
                sh 'docker run -d -p 4444:4444 --name chrome -p 7900:7900 --shm-size="2g" selenium/standalone-chrome:latest'
                sh 'ls'
            }
        }
        stage('Run Test Cases'){
            agent{
                docker{
                    image 'roretar/gui-blueprint-environment:1.0.0'
                }
            }
            steps {
                sh 'echo "run the browser containers."'
                sh 'robot -d reportes -i ADD_COMPONENTS Blueprint/TestCases'
                sh 'pwd'
                sh 'pip list'  
            }
            post {
                always {
                    archiveArtifacts artifacts: 'README.md', fingerprint: true
                }
            }
        }
        stage('Down Browser Environments') {
            steps {
                sh 'pwd'
                sh 'docker container ls'
                sh 'docker container stop chrome'
                sh 'docker container rm chrome'
                sh 'ls'
            }
        }
    }
}

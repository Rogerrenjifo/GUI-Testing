pipeline {
    agent any
    environment {
        DOCKERUSER='roretar' 
        DOCKERPASSWORD=credentials('dockerhubpassword')
        PYTHONPATH = "${WORKSPACE}"
        REPO_NAME = "${GIT_URL.split('/')[-2]}/${GIT_URL.split('/')[-1].replace('.git', '')}"
        PASSWORD="pasuconsumo"
        REMOTE_URL="http://0.0.0.0:4444"
        USER="roger.renjifo"
        BROWSER="remote_chrome"
        DEVICE="pc"
        DRIVER_PATH="./"
        IMPLICIT_TIMEOUT="20"
    }
    stages {                                                                    
        stage('Run Test Cases'){
            agent {
                docker {
                    image 'roretar/gui-blueprint-environment:1.0.0'
                    args '--net docker_default'
                }
            }
            steps {
                sh 'pip list'
                sh 'ls'
                sh 'pwd'
                sh 'export PYTHONPATH=$PWD/'
                sh 'echo $PYTHONPATH'
                sh 'echo "run the browser containers."'
                sh 'robot -d reports -i ADD_COMPONENTS .'
            }
            post {
                always {
                    archiveArtifacts artifacts: 'reports/', fingerprint: true
                }
            }
        }
        stage('Build Browser Environments') {    
            steps {
                
                sh 'docker run -d -p 4444:4444 --net docker_default --name chrome -p 7900:7900 --shm-size="2g" selenium/standalone-chrome:latest'
                sh 'docker network inspect docker_default'
            }
        }
        stage('Down Browser Environments') {
            steps {
                sh 'docker container ls'
            }
        }
    }
    post{
        always{
            sh 'docker container stop chrome'
            sh 'docker container rm chrome'
        }
    }
}

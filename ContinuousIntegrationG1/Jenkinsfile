pipeline {
    agent any
    environment {
        DOCKERUSER='roretar' 
        DOCKERPASSWORD=credentials('dockerhubpassword')
        PYTHONPATH = "${WORKSPACE}"
        REPO_NAME = "${GIT_URL.split('/')[-2]}/${GIT_URL.split('/')[-1].replace('.git', '')}"
        PASSWORD="pasuconsumo"
        REMOTE_URL="http://0.0.0.0:4444"
        USER="roger.renjifo"
        BROWSER="remote_chrome"
        DEVICE="pc"
        DRIVER_PATH="./"
        IMPLICIT_TIMEOUT="20"
    }
    stages {
        stage('Build Browser Environments') {
            steps {
                bat 'dir'
                bat 'docker network create grid'
                bat 'docker run -d -p 4444:4444 --net grid --name chrome -p 7900:7900 --shm-size="2g" selenium/standalone-chrome:latest'
            }
        }
        stage('Run Test Cases'){
            steps {
                bat 'echo "run the browser containers."'
                bat 'robot -d reports -i ADD_COMPONENTS Blueprint/TestCases'
                bat 'dir'
                bat 'pip list'  
            }
            post {
                always {
                    archiveArtifacts artifacts: 'reports/', fingerprint: true
                }
            }
        }
        stage('Down Browser Environments') {
            steps {
                bat 'pwd'
                bat 'docker container ls'
            }
        }
    }
    post{
        always{
            bat 'docker container stop chrome'
            bat 'docker container rm chrome'
            bat 'docker network rm -f grid'
        }
    }
}
